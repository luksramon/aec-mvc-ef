@model IEnumerable<aec_mvc_entity_framework.Models.Candidato>

@{
    ViewData["Title"] = "Index";
}

<h1>Início</h1>

<p>
    <button type="button" class="btn btn-block btn-primary" style="max-width: 100px;">
        <a asp-action="Create" style="color: #fff; font-size: 16px; font-weight: bold; text-decoration: none;">Cadastrar</a>
    </button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                CPF
            </th>
            <th>
                Nome:
            </th>
            <th>
                Data de Nascimento:
            </th>
            <th>
                E-mail:
            </th>
            <th>
                Telefone:
            </th>
            <th>
                Escolha a vaga:
            </th>
            <th>
                Logradouro:
            </th>
            <th>
                Complemento:
            </th>
            <th>
                Número:
            </th>
            <th>
                Bairro:
            </th>
            <th>
                Cidade:
            </th>
            <th>
                CEP:
            </th>
            <th>
                Estado:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profissao.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logradouro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complemento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <button type="button" class="btn btn-block btn-info" style="max-width: 100px;">
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color: #fff; font-size: 16px; font-weight: bold; text-decoration: none;">Editar</a>
                </button>
                <button type="button" class="btn btn-block btn-secondary" style="max-width: 100px;">
                    <a asp-action="Details" asp-route-id="@item.Id" style="color: #fff; font-size: 16px; font-weight: bold; text-decoration: none;">Detalhes</a>
                </button>
                <button type="button" class="btn btn-block btn-danger" style="max-width: 100px;">
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color: #fff; font-size: 16px; font-weight: bold; text-decoration: none;">Excluir</a>
                </button>
            </td>
        </tr>
}
    </tbody>
</table>